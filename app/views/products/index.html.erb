<h1>All products</h1>
<% @product.each do |product| %>

  <div class="card" style="width: 30rem;height:40rem;float:left;">
    <%if product.image.attached?%>
      <%= image_tag product.image,class:"card-img-top",style: 'height:420px;width:auto;'%>
    <% end %>
    <div class="card-body">
      <h5 class="card-title">Product-Name:<%= product.name%></h5>
      <p class="card-text"><h3>Description:</h3><%= product.product_desc%>.</p>
      <h6>Colour:<%= product.colour%></h6>
      <h6>Size:<%= product.size%></h6>
      <h6>Price:<%= product.price%></h6>
      <%=link_to"View Details",product_path(product),class:"btn btn-info" %>
    </div>
  </div>
<% end %>