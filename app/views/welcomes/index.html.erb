<h1>Home</h1>

<%if user_signed_in?%>
  <%if current_user.has_role?"admin"%>
    <%controller.redirect_to admins_path %>
  <%end %>
  <%=button_to "Sign-out",destroy_user_session_path,method: :delete,class: "btn btn-danger"%>
  <% @product.each do |product| %>

    <div class="card" style="width: 30rem;height:40rem;float:left;">
      <%if product.image.attached?%>
        <%= image_tag product.image,class:"card-img-top",style: 'height:420px;width:auto;'%>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">Product-Name:<%= product.name%></h5>
        <p class="card-text"><h3>Description:</h3><%= product.product_desc%>.</p>
        <h6>Colour:<%= product.colour%></h6>
        <h6>Size:<%= product.size%></h6>
        <h6>Price:<%= product.price%></h6>

        <a href="#" class="btn btn-primary">Add to cart</a>
      </div>
    </div>


  <% end %>


<%else%>
     <%=button_to"Sign-in",user_session_path ,class: "btn btn-success"%>
<%end %>












